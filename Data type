                         Console.WriteLine("Write your password");
                         password = Console.ReadLine();
                         if (userid == "Lakshya421" && password == "Lakshya#7987")
                         {
                             Console.WriteLine("You are Login");
                             break;
                         }
                         else if(i == 3)
                         {
                             Console.WriteLine("You are rejected");
                         }
                         else
                         {
                             Console.WriteLine("Please try again!");
                         }
                    
                     }
            Q3  //Write a C# Sharp program that takes the radius of a circle as input and
              //calculates the perimeter and area of the circle.
            
           Console.WriteLine("Enter the Radius of circle to calculate perimeter and area fo circle");
            int radius = int.Parse(Console.ReadLine());
            Console.WriteLine("The perimeter of circle is " + (2 * Math.PI) / radius) ;
            Console.WriteLine("The area of Circle is " + (Math.PI * Math.Pow(radius, 2))) ;
                     
