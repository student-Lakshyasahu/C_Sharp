
          Q1  // Write a C# Sharp program that takes a number and a width also a number.
            // It then displays a triangle of that width using that number.

             Console.WriteLine("Enter a any number and width of number");
             int num = int.Parse(Console.ReadLine());
             int width = int.Parse(Console.ReadLine());

             for (int i = 1; i <= num; i++)
             {
                 for(int j = i; j<=width; j++)
                 {
                     Console.Write(num);
                 }
                 Console.WriteLine();
             }
