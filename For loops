 // Q1. Write a C# Sharp program to display the n terms of odd natural numbers
 // and their sums.

            Console.WriteLine("Enter the number");
            int num = int.Parse(Console.ReadLine());
            int sum = 0;
            for (int i = 1; i <= num * 2; i++)
             {
               if (i % 2 != 0)
                {
                   Console.Write(i + " ");
                    sum += i;
                }

             }
             Console.WriteLine("The sum of " + num + " odd numbers is " + sum);
//Q2. Write a program in C# Sharp to display a right angle triangle with an asterisk.

Console.WriteLine("Enter the number you want to number of right angle traingle");
int lines = int.Parse(Console.ReadLine());
for (int i = 1; i <= lines; i++)
{
    for (int j = 1; j <= i; j++)
    {
        Console.Write("*");
    }
    Console.WriteLine();
}

//Q3 Write a program in C# Sharp to display a pattern
//like a right angle triangle with a number.

 Console.WriteLine("Enter the number of line you want to print right angle traingle");
 int lines = int.Parse(Console.ReadLine());

 for (int i = 1; i <= lines; i++)
 {
     for (int j = 1; j <= i; j++)
     {
         Console.Write(j);
     }
     Console.WriteLine();
 }

 //Q4 Write a C# Sharp program to make such a pattern like a right angle triangle
 //with the number increased by 1.
 Console.WriteLine("Enter the number of line you want to print right angle traingle");
 int lines = int.Parse(Console.ReadLine());
 int sum = 0;
 for (int i = 0; i < lines; i++)
 {
     for (int j = 0; j <= i; j++)
     {
         sum++;
         Console.Write(sum + " ");
     }
     Console.WriteLine();
 }

// Q5. Write a program in C# Sharp to make
//such a pattern like a pyramid with an asterisk.
 Console.WriteLine("Enter the number you want to print the number of lines in pyramid");
 int lines = int.Parse(Console.ReadLine());
 int star = 1;
 for (int i = 1; i <= lines; i++)
 {
     for (int j = 1; j <= (lines - i); j++)
     {
         Console.Write(" ");
     }
     for (int k = 1; k <= star; k++)
     {
         Console.Write("*");
     }
     for (int l = 1; l <= (lines - i); l++)
     {
         Console.Write(" ");
     }
     star += 2;
     Console.WriteLine();
 }
// Q6. Write a C# Sharp program to calculate the factorial of a given number.

Console.WriteLine("Enter the number you want to find factorial");
int num = int.Parse(Console.ReadLine());
int facto = 1;
for (int i = 1; i <= (num); i++)
{
    facto *= i;
}
Console.WriteLine(facto);
